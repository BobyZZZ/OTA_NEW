<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 背景 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/x100" />
            <gradient
                android:angle="45"
                android:centerY="0.75"

                android:startColor="@color/list_gray"
                android:endColor="@color/list_gray"/>

        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="@dimen/x100" />
                <gradient
                    android:angle="45"
                    android:centerY="0.75"
                    android:startColor="@color/sky_blue"
                    android:endColor="@color/sky_blue" />
            </shape>
        </clip>
    </item>
</layer-list>