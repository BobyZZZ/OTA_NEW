<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/common_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:textSize="@dimen/x22"
            android:gravity="center"
            android:textColor="@color/deep_grap"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/x5"
            android:background="#15000000"/>


        <FrameLayout
            android:id="@+id/common_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <TextView
                android:id="@+id/common_dialog_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/x10"
                android:textColor="#323232"
                android:layout_margin="@dimen/x40"
                />

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginBottom="@dimen/y20"
            android:orientation="horizontal">

            <Button
                android:id="@+id/common_dialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x18"
                android:padding="@dimen/x3"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="@color/colorAccent"
                android:text="@string/cancel"/>

            <Button
                android:id="@+id/common_dialog_comfire"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="@dimen/x18"
                android:padding="@dimen/x3"
                android:textColor="@color/colorAccent"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/comfire"/>
        </LinearLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>